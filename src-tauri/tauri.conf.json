{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "大胖工具箱",
  "version": "1.0.0",
  "identifier": "com.localresourcemanager.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5170",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "大胖工具箱",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": "default-src 'self' 'unsafe-inline' 'unsafe-eval' asset: http://asset.localhost https://asset.localhost data: blob: filesystem:; img-src 'self' asset: http://asset.localhost https://asset.localhost data: blob: filesystem: *;"
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/logo.png",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "tray": {
      "iconPath": "icons/logo.png",
      "iconAsTemplate": true
    }
  }
}
